    <script>
        const correctPassword = "1518";
        const display = document.getElementById("inputDisplay");
        let input = "";

        function enterDigit(digit) {
            if (input.length < 4) {
                input += digit;
            }
            display.textContent = "â€¢".repeat(input.length).padEnd(4, "â€¢");

            if (input.length === 4) {
                if (input === correctPassword) {
                    window.location.href = "rosa.html"; // Redirige a rosa.html
                } else {
                    alert("ContraseÃ±a incorrecta, intenta de nuevo");
                    input = "";
                    display.textContent = "â€¢â€¢â€¢â€¢";
                }
            }
        }
    </script>
